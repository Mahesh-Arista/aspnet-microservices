@using Web.Infrastructure.Global;
@{
    var cur = Site.StoreSettings.CurrencyDisplay;
}

<div class="mb-lg-5" id="prodsApp">
    <partial name="~/Views/Shared/_Spinner.cshtml" />
    <div class="row" ref="cat" slug="@Model.Slug">
        <div class="col-sm-6 col-lg-4 mb-3" v-for="p in products">
            <div class="card">
                <div class="card-body">
                    <h5>{{ p.name }}</h5>
                    <a v-bind:href="p.url"><partial name="~/Views/Partials/Catalog/_fakeImg.cshtml" /></a>
                    <p class="small">{{ shortDesc(p.description) }}</p>
                    <p class="small text-danger font-weight-bolder">@cur {{ parseFloat(p.price).toFixed(2) }}</p>
                    <p class="small"><a v-bind:href="p.url">View</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
