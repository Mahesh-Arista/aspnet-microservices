<div id="catApp">
    <partial name="~/Views/Shared/_Spinner.cshtml" />
    <div v-if="error" class="p-3 mt-3 h5 alert-danger">
        Error loading the catalog. Check if you can connect to the
        catalog service.
    </div>
    <div class="row">
        <div class="col-sm-6 col-lg-4 my-3" v-for="c in categories">
            <div class="card">
                <a v-bind:href="c.url"><partial name="~/Views/Partials/Catalog/_fakeImg.cshtml" /></a>
                <div class="card-body">
                    <h5 class="card-title">{{ c.name }}</h5>
                    <p class="small">Check our selection of <strong>{{ c.name }}</strong>.</p>
                    <a v-bind:href="c.url" class="small">View all products in {{ c.name }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
