@model AccountDetails
@{
    var editMode = false;
}

<form asp-action="Update">

    <div class="form-group">
        <label for="inputAddress2">Name:</label>
        @if (editMode)
        {
            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
        }
        else
        {
            <div class="font-weight-light">@Model.Name</div>
        }
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email:</label>
            @if (editMode)
            {
                <input asp-for="Email" type="email" class="form-control">
            }
            else
            {
                <div class="font-weight-light">@Model.Email</div>
            }
        </div>
    </div>
    <div class="form-row">
        <a asp-action="Index" class="btn btn-primary">Back to account</a>
        <button class="btn btn-danger">Edit</button>
    </div>

</form>